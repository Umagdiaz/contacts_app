<p style="color: green"><%= notice %></p>

<h1>List of Contacts</h1>

<table class="table table-striped table-bordered table-hover">
  <thead class="thead-dark">
    <tr>
      <th></th>
      <th>Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Instagram</th>
      <th> </th>
    </tr>
  </thead>

  <tbody>
  <% @contacts.each do |contact| %>
      
      <tr>
      <td><%= link_to "Show", contact %></td>
      <td><%= contact.firt_name + ' ' + contact.last_name %></td>
      <td><%= contact.email %></td>
      <td><%= contact.phone %></td>
      <td><%= contact.instagram %></td>
      <td><%= link_to 'Delete', contact, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-danger btn-sm" %></td>
      </tr>
      <br>
      <div>
        <div id="contacts">
        <%=%>
        </div> 
    <% end %>
    </div>
    <tbody>
</table>

<%= link_to "New contact", new_contact_path %>
